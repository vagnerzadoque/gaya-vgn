{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["es6", "es7", "es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": false,
    "sourceMap": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es5",
    "types": ["jest", "react", "@testing-library/jest-dom", "node"]
  },
  "files": ["src/index.ts", "global.d.ts"],
  "include": ["src/components/**/*.stories.*", "src/components/**/*.test.*"],
  "exclude": ["src/components/Ripple/*.test.*"]
}
